{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Kill Server",
      "type": "shell",
      "command": "pkill",
      "args": ["-f", "tsx.*server"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Start Server (Background)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:server"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
