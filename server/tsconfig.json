{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "../dist/server",
    "rootDir": ".."
  },
  "include": [
    "./**/*",
    "../src/types.ts",
    "../src/types/**/*",
    "../src/utils/mindMapData.ts"
  ],
  "exclude": [
    "node_modules",
    "../dist",
    "../src/components",
    "../src/chat",
    "../src/mindmaps",
    "../src/settings",
    "../src/workflows",
    "../src/workspace",
    "../src/store",
    "./**/__tests__/**/*",
    "./**/*.test.ts"
  ]
}
