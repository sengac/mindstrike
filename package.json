{
  "name": "mindstrike",
  "version": "0.0.1",
  "description": "An agentic AI knowledge assistant",
  "author": "MindStrike",
  "license": "MIT",
  "type": "module",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:debug": "concurrently \"npm run dev:server:debug\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "dev:server:debug": "tsx watch server/index.ts --debug",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit && tsc -p server/tsconfig.json --noEmit",
    "start": "npm run build && node dist/server/index.js",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "package": "npm run build && electron-builder",
    "package:dir": "npm run build && electron-builder --dir",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "package:mac:x64": "npm run build && electron-builder --mac --x64",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "chokidar": "^4.0.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dompurify": "^3.2.2",
    "express": "^4.19.2",
    "fast-glob": "^3.3.2",
    "glob": "^11.0.0",
    "katex": "^0.16.22",
    "lucide-react": "^0.469.0",
    "marked": "^14.1.3",
    "mermaid": "^11.6.0",
    "monaco-editor": "^0.52.0",
    "node-llama-cpp": "^3.10.0",
    "playwright": "^1.52.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "react-katex": "^3.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "reactflow": "^11.11.4",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.4",
    "typescript": "~5.7.2",
    "vite": "^6.0.5"
  },
  "build": {
    "appId": "com.mindstrike.app",
    "productName": "MindStrike",
    "directories": {
      "output": "dist/electron"
    },
    "files": [
      "electron/main.js",
      "dist/client/**/*",
      "dist/server/**/*",
      "public/favicon.ico",
      "public/web-app-manifest-512x512.png",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/web-app-manifest-512x512.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
